<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:background="@drawable/rounded_dialog" android:gravity="center" android:id="@+id/li_container"
              android:layout_margin="1dp">

    <EditText
            android:hint="Team name..."
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/et_teamname" android:layout_weight="1"
            android:background="@drawable/rounded_edittext" android:layout_margin="16dp"
            android:gravity="center_vertical" android:padding="5dp"/>
    <Button
            android:text="Create"
            android:layout_width="80dp"
            android:layout_height="40dp" android:id="@+id/btn_create" android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" android:layout_margin="16dp"/>
</LinearLayout>