<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="400dp"
              android:background="@drawable/rounded_dialog" android:gravity="center" android:id="@+id/li_container"
              android:layout_margin="1dp" android:orientation="vertical">
    <TextView
            android:text="Please select a team to join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_title"
            android:textSize="18sp" android:textColor="@android:color/white" android:layout_margin="8dp"
            android:padding="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/rv_vertical" android:layout_margin="8dp"
    />
</LinearLayout>