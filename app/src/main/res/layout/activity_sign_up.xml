<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/colorPrimary">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up Page"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp" android:id="@+id/welcomeText"
            android:textSize="24sp" android:textColor="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.498"/>

    <EditText
            android:hint="Username"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/nameEditText"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="1.0" android:padding="10dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/addPhotoButton"/>


    <EditText
            android:hint="Email"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/emailEditText"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="0.0" android:padding="10dp"/>
    <EditText
            android:hint="Password"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/passwordEditText"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/emailEditText" android:padding="10dp"/>
    <Button
            android:text="Click here to Sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:id="@+id/continueButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
            android:padding="10dp" android:textColor="#ffffff"/>

    <TextView
            android:text="Press 'here' to go back to login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backToLogin" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/continueButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp" android:textColor="@color/colorAccent"/>
    <Button
            android:text="Add Photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/addPhotoButton" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_image" android:textColor="#ffffff"/>


    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="150dp"
                                                  android:layout_height="150dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  android:id="@+id/circleImage"
                                                  app:civ_border_width="1dp"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                                                  app:layout_constraintTop_toBottomOf="@+id/welcomeText"/>
</android.support.constraint.ConstraintLayout>