<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorPrimary" android:gravity="left|center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="70dp"
                                                          android:layout_height="70dp"
                                                          app:layout_constraintEnd_toEndOf="parent"
                                                          android:id="@+id/circleImage"
                                                          app:civ_border_width="1dp"
                                                          app:layout_constraintStart_toStartOf="parent"
                                                          app:layout_constraintTop_toBottomOf="@+id/welcomeText"
                                                          android:layout_marginLeft="15dp"/>
            <TextView
                    android:text="userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/userName" android:layout_marginLeft="10dp"
                    android:textSize="18sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>