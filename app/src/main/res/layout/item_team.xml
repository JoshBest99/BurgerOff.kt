<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="102dp" android:background="@color/colorPrimary">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="left|center_vertical">
                <TextView
                        android:text="Team Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/tv_team_name"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp" android:textColor="#ffffff" android:layout_weight="1"/>
                <Button
                        android:text="JOIN"
                        android:layout_width="80dp"
                        android:layout_height="40dp" android:id="@+id/btn_join"
                        android:background="@drawable/rounded_button"
                        android:textColor="@android:color/white" android:layout_margin="16dp"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" android:id="@+id/view" android:background="#bbbbbb"
                    android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>